<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Main2Activity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="isim"
        android:inputType="text" />
    <TextView
        android:id="@+id/text_view_data_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/CountryCode"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="fill_horizontal"
            android:hint="+90"
            android:inputType="number"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/Phone_Num"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="telefon_numarasi"
            android:inputType="phone" />
    </LinearLayout>

    <Button
        android:id="@+id/add_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#149CFA"
        android:clickable="true"
        android:drawableTint="#FFFFFF"
        android:onClick="addNote"
        android:text="Ekle"
        tools:ignore="OnClick"
        android:focusable="true" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ea1a2d"
        android:onClick="deleteNode"
        android:text="sil"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/sendtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4ED12B"
        android:onClick="sendtext"
        android:text="guvendeyim"
        tools:ignore="OnClick" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="379dp"
        android:layout_height="376dp"
        android:fillViewport="true"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text_view_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>